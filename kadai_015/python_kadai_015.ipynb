        "class Human:\n",
        "    # 属性(プロパティ)を設定する\n",
        "    def __init__(self,name,age):\n",
        "        self.name = name\n",
        "        self.age = age\n",
        "    # メソッドの設定\n",
        "    def printinfo(self):\n",
        "        print(f\"名前は{self.name}、年齢は{self.age}です。\")\n",
        "\n",
        "# クラスの呼び出し\n",
        "sato = Human(\"佐藤\",34)\n",
        "sato.printinfo()"
